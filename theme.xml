<theme>
	<formatVersion>4</formatVersion>
	<include>./config_16x9.xml</include>
	<view name="basic,detailed,video">
    		<sound name="launch">
        		<path>./_inc/launch.wav</path>
    		</sound>
    		<sound name="systemscroll">
        		<path>./_inc/systemscroll.wav</path>
    		</sound>
			<image name="backgroundfilter" extra="true">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <size>1 1</size>
            <path>./_inc/white40.png</path>
			  <zIndex>1.0</zIndex>
			</image>
	</view>
	<view name="system">
		<text name="systemInfo">
			<backgroundColor>FF00007F</backgroundColor>
			<color>000000FF</color>
			<fontPath>./_inc/UpheavalPro.ttf</fontPath>
		</text>
	</view>
	    <view name="system,basic,detailed,video">
        <image name="background" extra="true">
            <path>./_inc/nf_bg.png</path>
        </image>
        <image name="logo">
            <path>./_inc/nf_logo.png</path>
        </image>
    </view>
</theme>