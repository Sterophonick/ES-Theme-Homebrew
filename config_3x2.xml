<theme>
    <formatVersion>4</formatVersion>

	<view name="system">
	
		<image name="background" extra="true">
			<size>1.186111 1</size>
			<pos>0.5 0</pos>
			<origin>0.5 0</origin>
		</image>
		<helpsystem name="help">
			<pos>0.012 0.956</pos>
			<fontPath>./art/hachicro_0.TTF</fontPath>
			<fontSize>0.033</fontSize>
		</helpsystem>
	</view>

    <view name="basic, detailed">
		<helpsystem name="help">
			<pos>0.012 0.956</pos>
			<fontPath>./art/hachicro_0.TTF</fontPath>
			<fontSize>0.033</fontSize>
			<textColor>000000</textColor>
			<iconColor>000000</iconColor>
		</helpsystem>
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
			<color>393a3b</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/determinationsansweb-webfont.ttf</fontPath>
			<fontSize>0.06</fontSize>
			<size>0.12 0.04</size>
		</text>
		
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite">
			<color>393a3b</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/determinationsansweb-webfont.ttf</fontPath>
			<fontSize>0.06</fontSize>
			<size>0.14 0.04</size>
		</text>
		<text name="info1, info2, info3, info4, info5, info6, info7, info8, info9, info10, info11, info12" extra="true">
			<color>262626</color>
			<alignment>left</alignment>
			<fontPath>./art/5Computers-In-Love.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.4 0.03</size>
		</text>


		<text name="md_description">
			<color>393a3b</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/determinationsansweb-webfont.ttf</fontPath>
			<fontSize>0.06</fontSize>
		</text>
		
		<datetime name="md_releasedate, md_lastplayed">
			<color>393a3b</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/determinationsansweb-webfont.ttf</fontPath>
			<fontSize>0.06</fontSize>
			<size>0 0.04</size>
		</datetime>
		
		
		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image> 

                <image name="backgroundfilter" extra="true">
                        <pos>0 0</pos>
                        <origin>0 0</origin>
                        <size>1 1</size>
                        <path>./art/white40.png</path>
                </image>

		<textlist name="gamelist">
			<selectorColor>393a3b</selectorColor>
			<selectedColor>97999b</selectedColor>
			<primaryColor>393a3b</primaryColor>
			<secondaryColor>000000</secondaryColor>
			<fontPath>./art/UpheavalPro.ttf</fontPath>
			<fontSize>0.050</fontSize>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./art/scroll.wav</scrollSound>
		<selectorImagePath>./art/selector-basic.png</selectorImagePath>
		<selectorImageTile>false</selectorImageTile>
		<selectorOffsetY>0.0</selectorOffsetY>
		<selectorHeight>0.06</selectorHeight>
		<selectorColor>ffffff</selectorColor>

		</textlist>
		<image name="header" extra="true">
			<pos>0 -0.025</pos>
			<origin>0 0</origin>
			<size>1 0</size>
			<path>./art/white80_4x3.png</path>
		</image>

		<image name="footer" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<path>./art/footer_4x3.png</path>
		</image>
	</view>

	<view name="basic">
	</view>

	<view name="detailed">
 		<!--<image name="bggreye" extra="true">
                        <path>./white.png</path>
                        <pos>0 0</pos>
                        <size>1 1</size>
                        <maxSize>1 1</maxSize>
                        <origin>0 0</origin>
                </image>-->		
	</view>
</theme>


